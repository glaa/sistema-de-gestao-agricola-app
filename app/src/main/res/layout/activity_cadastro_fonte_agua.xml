<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_verde"
    tools:context=".CadastroFonteAguaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView39"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/bt_mrgem_lateral_principal"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="@dimen/bt_mrgem_lateral_principal"
                android:text="@string/pergunta_fonte_agua"
                android:textColor="@color/white"
                android:textSize="@dimen/tv_perguntas_cadastro_propriedade" />

            <Button
                android:id="@+id/btPocoCadastroFonteAgua"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bt_altura_principal"
                android:layout_marginStart="@dimen/bt_mrgem_lateral_principal"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="@dimen/bt_mrgem_lateral_principal"
                android:background="@drawable/bt_arredondado"
                android:backgroundTint="@color/verde_escuro"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Poço"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/bt_tamanho_fonte" />

            <Button
                android:id="@+id/btCisternaCadastroFonteAgua"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bt_altura_principal"
                android:layout_marginStart="@dimen/bt_mrgem_lateral_principal"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="@dimen/bt_mrgem_lateral_principal"
                android:background="@drawable/bt_arredondado"
                android:backgroundTint="@color/verde_escuro"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Cisterna"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/bt_tamanho_fonte" />

            <Button
                android:id="@+id/btCompesaCadastroFonteAgua"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bt_altura_principal"
                android:layout_marginStart="@dimen/bt_mrgem_lateral_principal"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="@dimen/bt_mrgem_lateral_principal"
                android:background="@drawable/bt_arredondado"
                android:backgroundTint="@color/verde_escuro"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Compesa"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/bt_tamanho_fonte" />

            <Button
                android:id="@+id/btOutroCadastroFonteAgua"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bt_altura_principal"
                android:layout_marginStart="@dimen/bt_mrgem_lateral_principal"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="@dimen/bt_mrgem_lateral_principal"
                android:background="@drawable/bt_arredondado"
                android:backgroundTint="@color/verde_escuro"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Outro"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/bt_tamanho_fonte" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="32dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical">

            <Button
                android:id="@+id/btProximoCadastroFonteAgua"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bt_altura_principal"
                android:layout_marginStart="@dimen/bt_mrgem_lateral_principal"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="@dimen/bt_mrgem_lateral_principal"
                android:background="@drawable/bt_arredondado"
                android:backgroundTint="@color/white"
                android:text="Próximo"
                android:textAllCaps="false"
                android:textColor="@color/verde_escuro"
                android:textSize="@dimen/bt_tamanho_fonte" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sistemadegestaoagricola">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SistemaDeGestãoAgrícola">
        <activity android:name=".NovaReuniaoActivity"></activity>
        <activity android:name=".CadastroCidadeActivity" />
        <activity android:name=".CadastroCepActivity" />
        <activity android:name=".CadastroLocalizacaoActivity" />
        <activity
            android:name=".CadastroFonteAguaActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ExibirFotografiaMapaActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ExemploMapaActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CadastroMapaPropriedadeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CadastroTamanhoPropriedadeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TamanhoPropriedadeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CadastroInicioActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.android.actions"
            android:resource="@drawable/et_style" />

        <activity
            android:name=".ExibirInformacoesPessoaisActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".ReuniaoCoordenadorActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".MinhasInformacoesActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".MinhaPropriedadeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".ErroActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".AberturaActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.sistemadegestaoagricola.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>